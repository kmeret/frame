<?xml version="1.0" encoding="utf-8"?>
<manifest
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	package="io.github.kmeret.frame"
	>
	
	<uses-permission android:name="android.permission.INTERNET"/>
	
	<application
		android:name="io.github.kmeret.frame.application.App"
		android:allowBackup="false"
		android:label="@string/app_name"
		android:supportsRtl="false"
		android:theme="@style/AppTheme"
		android:usesCleartextTraffic="true"
		tools:ignore="GoogleAppIndexingWarning,MissingApplicationIcon,UnusedAttribute"
		>
		
		<activity-alias
			android:name=".Launcher"
			android:label="@string/app_name"
			android:targetActivity=".presentation.main.MainActivity"
			>
			<intent-filter>
				<action android:name="android.intent.action.MAIN"/>
				<category android:name="android.intent.category.LAUNCHER"/>
			</intent-filter>
		</activity-alias>
		
		<activity
			android:name=".presentation.main.MainActivity"
			android:screenOrientation="portrait"
			android:launchMode="singleTop"
			/>
	
	</application>

</manifest>